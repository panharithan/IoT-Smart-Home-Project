<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textview_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="Front Fence"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eeeeee"
        android:layout_weight="1">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/imageview_fence"
               android:layout_marginTop="40dp"
               android:src="@drawable/fence"
               android:layout_width="300dp"
               android:layout_height="250dp"
               android:layout_marginBottom="20dp"
               android:layout_centerHorizontal="true"
               />
           <Button
               android:id="@+id/fence_up"
               android:text="UP"
               android:textSize="15dp"
               android:layout_below="@id/imageview_fence"
               android:layout_width="80dp"
               android:layout_height="60dp"
               android:textColor="#1565c0"
               android:layout_marginLeft="20dp"
               />
           <Button
               android:id="@+id/fence_down"
               android:text="Down"
               android:textSize="15dp"
               android:layout_below="@id/imageview_fence"
               android:layout_toRightOf="@id/fence_up"
               android:layout_width="80dp"
               android:layout_height="60dp"
               android:layout_marginLeft="10dp"
               android:textColor="#1565c0"
               />
           <Button
               android:id="@+id/fence_Open"
               android:text="Open"
               android:textSize="15dp"
               android:layout_below="@id/imageview_fence"
               android:layout_toRightOf="@id/fence_down"
               android:layout_width="80dp"
               android:textColor="#1565c0"
               android:layout_height="60dp"
               android:layout_marginLeft="10dp"
               />
           <Button
               android:id="@+id/fence_close"
               android:text="Close"
               android:textSize="15dp"
               android:layout_below="@id/imageview_fence"
               android:layout_toRightOf="@id/fence_Open"
               android:layout_width="80dp"
               android:layout_height="60dp"
               android:textColor="#1565c0"
               android:layout_marginLeft="10dp"
               />
           <TextView
               android:id="@+id/textview_fence_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="20dp"
               android:backgroundTint="@color/colorPrimaryDark"
               android:text="Status"
               android:textColor="#1565c0"
               android:textSize="21sp"
               android:textStyle="bold"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/fence_up"

               />

       </RelativeLayout>

    </LinearLayout>

</LinearLayout>